{
  "description": "Persist Now Tv cookies to remain signed in across sessions",
  "manifest_version": 3,
  "name": "Now TV 4ever",
  "version": "1.0",
  "icons": {
    "48": "./icons/icon48.png",
    "96": "./icons/icon96.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.nowtv.com/*"
      ],
      "js": [
        "background.js"
      ]
    }
  ],
  "content_security_policy": {}
}